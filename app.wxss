/**app.wxss**/
@import "weui.wxss";
@import "colorui/main.wxss";
@import "colorui/icon.wxss";
page {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  box-sizing: border-box;
}
.container {
  box-sizing: border-box;
  width: 100%;
  position: relative;
  color: #333;
  padding: 0 30rpx;
}
.show {
  display: block;
}
.hide {
  display: none;
}
.flex_start {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
}
.flex_center {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.flex_space {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.h6 {
  font-size: 32rpx;
  font-weight: bold;
  padding: 10rpx 0;
  margin: 0;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.p {
  font-size: 28rpx;
  color: #888;
}
